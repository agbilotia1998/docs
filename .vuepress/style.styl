@import './override.styl'

.hero h1
  display none

img
  max-width 100%

header.navbar
  background-color $backgroundColor

  .links
    background-color transparent
  .site-name
    display none
  .nav-item > a, .repo-link, .dropdown-title
    color #eee
    &:hover, &.router-link-active
      color white
  .sidebar-button
    color #eee

.home .hero
  img
    margin-bottom 5em
    margin-top 5em
  h1
    display none

@media (max-width: $MQMobileNarrow)
  .content div[class*="language-"]
    margin auto

span.type {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
  color: #4b2881;
  padding: 0.25rem 0.5rem;
  margin: 0;
  font-size: 0.85em;
  background-color: rgba(27,31,35,0.05);
  border-radius: 3px;
  display: flex;
  display: inline-flex;
}